<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contacts" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Contacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Contacts.NoActionBar">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="Theme.Contacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Contacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Blue" parent="Theme.AppCompat">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/text_button_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Button.White" parent="Theme.AppCompat">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/text_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

</resources>